
///////////////////////////////////////////////////////////////////////////////
//// MACROS
///////////////////////////////////////////////////////////////////////////////

#define PI 3.14159265358979323846


///////////////////////////////////////////////////////////////////////////////
//// SETUP
///////////////////////////////////////////////////////////////////////////////

in vec2 vUv;

uniform float time;
uniform vec2 res;


///////////////////////////////////////////////////////////////////////////////
//// HELPERS
///////////////////////////////////////////////////////////////////////////////

#pragma glslify: random = require(glsl-random)
#pragma glslify: snoise2 = require(glsl-noise/simplex/2d)


///////////////////////////////////////////////////////////////////////////////
//// MAIN
///////////////////////////////////////////////////////////////////////////////

void main() {
  vec2 uv = vUv;

  vec3 c1 = vec3(snoise2(time * 0.1 + vec2(uv.x, uv.y) * vec2(3.0)));
  vec3 c2 = vec3(random(floor(vec2(uv.x, uv.y) * vec2(100.0)) / 100.0));

  vec3 final = mix(c1, c2, step(0.5, uv.x));

  gl_FragColor = vec4(final, 1.0);
}
